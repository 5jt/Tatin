# Auto detect text files
* text=auto

*.apl? linguist-language=apl
*.dyapp linguist-language=apl
*.dyalog linguist-language=apl
*.dws linguist-language=apl

# Exclude these:
CSS/ linguist-vendored=true
*.js linguist-vendored=true
*.iss/ linguist-vendored=true

docs/ linguist-vendored=true
html/ linguist-vendored=true
*.html/ linguist-documentation=true
*.md/ linguist-documentation=true

# Set the default behavior, in case people don't have core.autocrlf set
#* text eol=auto

# Make sure that JSON files use LF 
#*.json text eol=lf
